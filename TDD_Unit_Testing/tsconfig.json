{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true, // Enables debugging
    "declaration": true // Generates .d.ts files
  },

  "exclude": ["node_modules", "dist"]
}
